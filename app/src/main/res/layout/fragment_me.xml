<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/u" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位：米"/>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长度L1"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_l1"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长度L2"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_l2"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="长度L3"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_l3"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位：米"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深度H1"
                        android:textSize="10sp"/>
                    <EditText
                        android:id="@+id/u_et_h1"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单位：米/秒"/>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流速v1"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_v1"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流速v2"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_v2"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="流速v3"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_v3"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|bottom">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系数m1"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_m1"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系数m2"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_m2"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系数m3"
                        android:textSize="10sp"/>

                    <EditText
                        android:id="@+id/u_et_m3"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="底部圆弧部分"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="长度L0"
                    android:textSize="10sp"/>

                <EditText
                    android:id="@+id/u_et_l0"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深度H0"
                    android:textSize="10sp"/>

                <EditText
                    android:id="@+id/u_et_h0"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:maxLength="7"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/u_btn_cal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="计算" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算结果为："/>
            <TextView
                android:id="@+id/u_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#ff0000" />
        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:text="查看历史计算数据"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="#0000ff"-->
            <!--/>-->
    </LinearLayout>


</RelativeLayout>
